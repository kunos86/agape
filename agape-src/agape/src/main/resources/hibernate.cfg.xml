<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="">
  <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
  <property name="hibernate.connection.datasource">java:jboss/datasources/agapeDS</property>
  <property name="hibernate.current_session_context_class">org.hibernate.context.internal.ThreadLocalSessionContext</property>
  <property name="show_sql">true</property>
  <mapping class="pl.ksb.agape.domain.model.User"/>
  <mapping class="pl.ksb.agape.domain.model.Course"/>
  <mapping class="pl.ksb.agape.domain.model.Lesson"/>
  <mapping class="pl.ksb.agape.domain.model.EducationState"/>
  <mapping class="pl.ksb.agape.domain.model.Answer"/>
  <mapping class="pl.ksb.agape.domain.model.Question"/>
  <mapping class="pl.ksb.agape.domain.model.StudentTeacher"/>
 </session-factory>
</hibernate-configuration>
